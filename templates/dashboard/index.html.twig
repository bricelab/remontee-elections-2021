{% extends 'base.html.twig' %}

{#{% block title %}Hello DashboardController!{% endblock %}#}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Tableau de bord</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <a href="{{ path('dashboard') }}" class="btn btn-primary">
                <i class="bi-arrow-clockwise"></i>
                Actualiser
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="col-12">
                        <h3 class="h6 text-center text-uppercase">Taux de remontée</h3>
                    </div>
                    <div class="col-12">
                        {{ render_chart(nbRemonteesPie) }}
                    </div>
                </div>

            </div>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="col-12">
                        <h3 class="h6 text-center text-uppercase">Taux de participation</h3>
                    </div>
                    <div class="col-12">
                        {{ render_chart(tauxParticipation) }}
                    </div>
                </div>

            </div>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="col-12">
                        <h3 class="h6 text-center text-uppercase">Tendances nationales</h3>
                    </div>
                    <div class="col-12">
                        {{ render_chart(tendancesNationales) }}
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="row mt-3 mb-5">
        <div class="col-lg-6 col-md-6 col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="col-12">
                        <h3 class="h6 text-center text-uppercase">Taux de remontée par département</h3>
                    </div>
                    <div class="col-12">
                        {{ render_chart(tauxRemonntee) }}
                    </div>
                </div>

            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="col-12">
                        <h3 class="h6 text-center text-uppercase">Tendances par département</h3>
                    </div>
                    <div class="col-12">
                        {{ render_chart(voixDuos) }}
                    </div>
                </div>

            </div>
        </div>
    </div>



{% endblock %}
