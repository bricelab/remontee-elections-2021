{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Changer de mot de passe</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <a href="{{ path('resultat_index') }}" class="btn btn-primary mx-2">
                <i class="bi-backspace-fill"></i>
            </a>
        </div>
    </div>

    <div class="row mt-3 mb-5">
        <div class="col-12">
            {% include 'components/flash_messages.html.twig' %}
        </div>
        <div class="col-12">
            <div class="card pt-3">
                <div class="card-body">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button class="btn btn-primary">{{ button_label|default('Modifier') }}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
